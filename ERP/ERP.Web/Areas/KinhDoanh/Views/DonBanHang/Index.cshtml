@model IEnumerable<ERP.Web.Models.Database.BH_DON_BAN_HANG>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/KinhDoanh/Views/Shared/_Layout.cshtml";
}

<script src="~/Content/self-writing/js/Services/BanHangService.js"></script>
<script src="~/Content/self-writing/js/Controllers/BanHangCtrl.js"></script>

<div ng-app="myApp" ng-controller="BanHangCtrl">
    <div class="content">
        <table class="table">
            <thead>
                <tr>
                    <th>Mã số bán hàng</th>
                    <th>Ngày bán hàng</th>
                    <th>Khách hàng</th>
                    <th>Tên liên hệ</th>
                    <th>Hình thức thanh toán</th>
                    <th>Tổng tiền hàng</th>
                    <th>Tổng tiền thuế</th>
                    <th>Tổng tiền thanh toán</th>
                    <th>Số tiền viết bằng chữ</th>
                    <th>Nhân viên quản lý</th>
                    <th>Địa điểm giao hàng</th>
                    <th>Đã xuất kho</th>
                    <th>Đã lập hóa đơn</th>
                    <th>Sửa</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="entry in list_donbanhang" class="hover" ng-class-odd="'odd'" ng-class-even="'even'">
                    <td>{{entry.MA_SO_BH}}</td>
                    <td>{{entry.NGAY_BH | date: 'dd/MM/yyyy'}}</td>
                    <td>{{entry.TEN_CONG_TY}}</td>
                    <td>{{entry.TEN_LIEN_HE}}</td>
                    <td>{{entry.HINH_THUC_THANH_TOAN}}</td>
                    <td>{{entry.TONG_TIEN_HANG | currency : '' : 0}}</td>
                    <td>{{entry.TONG_TIEN_THUE_GTGT | currency: '' : 0}}</td>
                    <td>{{entry.TONG_TIEN_THANH_TOAN | currency : '' : 0}}</td>
                    <td>{{entry.SO_TIEN_VIET_BANG_CHU}}</td>
                    <td>{{entry.HO_VA_TEN}}</td>
                    <td>{{entry.DIA_DIEM_GIAO_HANG}}</td>
                    <td><input type="checkbox" ng-disabled="true" ng-model="entry.DA_XUAT_KHO" /></td>
                    <td><input type="checkbox" ng-disabled="true" ng-model="entry.DA_LAP_HOA_DON" /></td>
                    <td><a href="/KinhDoanh/DonBanHang/Edit/{{entry.MA_SO_BH}}">Sửa đơn bán hàng</a></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
