
@{
    ViewBag.Title = "TaoDuKienMoi";
    Layout = "~/Areas/KinhDoanh/Views/Shared/_Layout.cshtml";
}
<script src="~/Content/download/pnotify.custom.min.js"></script>
<link href="~/Content/download/pnotify.custom.min.css" rel="stylesheet" />
<div ng-app="myApp" ng-controller="DonhangdukienCtrl">
    <input type="hidden" value="@Session["USERNAME"]" id="username"/>
    <form class="form-horizontal" name="mainForm" novalidate>
        <fieldset>
            <!-- Form Name -->
            <legend>Add New</legend>
            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="name">Mã khách hàng: </label>
                <div class="col-md-4">
                    <p ng-model="ma_khach_hang" id="makhachhang"></p>
                </div>
            </div>
            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="name">Người liên hệ: </label>
                <div class="control-label col-md-4">
                    <div class="input-group">
                        <input type="text" class="form-control" ng-model="nguoi_lien_he" ng-change="onLienHeFind()" ng-focus="showtable_id_lien_he = true" id="ID_LIEN_HE" name="ID_LIEN_HE">
                        <input type="text" class="form-control" ng-model="id_lien_he" ng-change="onLienHeFind()" ng-focus="showtable_id_lien_he = true" style="display:none">
                        <div class="input-group-btn">
                            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" ng-click="showtable_id_lien_he = !showtable_id_lien_he;">
                                <span class="caret"></span>
                            </button>
                            <div class="dropdown-menu dropdown-menu-center borderRadius0 padding0" style="display: block" ng-show="showtable_id_lien_he">
                                <div class="table-responsive">
                                    <table class="table table-striped table-hover" st-table="LhCollection" st-safe-src="arrayLHFinded">
                                        <thead class="bg-blue text-white">
                                            <tr>
                                                <th>Id liên hệ</th>
                                                <th>Người lên hệ</th>
                                                <th>Email cá nhân</th>
                                                <th>SĐT1</th>
                                                <th>Email công ty</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr style="cursor:pointer" ng-click="showInfoLH(Lh)" ng-repeat="Lh in LhCollection">
                                                <td>{{Lh.ID_LIEN_HE}}</td>
                                                <td>{{Lh.NGUOI_LIEN_HE}}</td>
                                                <td>{{Lh.EMAIL_CA_NHAN}}</td>
                                                <td>{{Lh.SDT1}}</td>
                                                <td>{{Lh.EMAIL_CONG_TY}}</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-4 control-label" for="name">Thành công: </label>
                <div class="col-md-4">
                    <input type="checkbox" ng-model="thanhcong">
                </div>
            </div>
            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="name">Thất bại: </label>
                <div class="col-md-4">
                    <input type="checkbox" ng-model="thatbai">
                </div>
            </div>
            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="name">Lý do thất bại: </label>
                <div class="col-md-4">
                    <input type="text" placeholder="Lý do thất bại" class="form-control input-md" ng-model="lydothatbai">
                </div>
            </div>
            <!-- Button (Double) -->
            <div class="form-group">
                <label class="col-md-4 control-label" for="anmelden"></label>
                <div class="col-md-8 addnew">
                    <button id="addnew" name="addnew" class="btn" ng-click="addnew()" data-dismiss="modal">Add New</button>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <button id="exit" name="exit" class="btn" data-dismiss="modal">Exit</button>
                </div>
            </div>
        </fieldset>
    </form>
</div>

