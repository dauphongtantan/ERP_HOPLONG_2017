@model ERP.Web.Models.Database.CN_NHOM_NGHIEP_VU

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Settings/Views/Shared/Layout.cshtml";
}

<style>
    .hienthi {
        display: block !important;
    }

    .nothienthi {
        display: none !important;
    }

    select option:hover {
        background: #E6F5D6;
    }
</style>
<div ng-app="myApp" ng-controller="themnghiepvuCtrl">
    <select size="10" name="decision2" style="height: 900px;width: 600px;" class="col-md-4">
        <option ng-repeat="item in list_nguoidung" style="height:30px;margin-left: 15px;margin-bottom: 15px;vertical-align:middle;padding-top: 5px;" ng-click="transfer(item)">{{item.HO_VA_TEN}}</option>
    </select>

    <div class="col-md-2">
        <span><input type="checkbox" ng-checked="listtrangthai==true" ng-model="listtrangthai" ng-click="create()">{{item.HO_VA_TEN}}</span>
        <button type="button" ng-class="class()" style="display:none" ng-click="delete()">Xóa</button>
        <div ng-class="kiemtra()" style="display:none">{{ketqua}}</div>
    </div>
</div>
