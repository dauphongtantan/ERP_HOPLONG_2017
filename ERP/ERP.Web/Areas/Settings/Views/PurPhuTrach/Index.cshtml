
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/self-writing/css/SalePhuTrach.css" rel="stylesheet" />
<div ng-app="myApp" ng-controller="purphutrachCtrl">
    <div class="content">

        <div id="quick-access">
            <form class="form-inline quick-search-form" role="form" action="#">
                <div class="form-group" style="width: 100%">
                    <input type="text" class="form-control" placeholder="Type Inventory Name You Want To Search Here" ng-model="searchtext" style="width:  60%">
                </div>

            </form>

        </div>
        <button type="button" class="btn btn-info" data-toggle="modal" data-target="#myModal">Add New Phụ Trách</button>

        <!-- Modal Add New-->
        <div class="modal fade" id="myModal" role="dialog">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">

                    <div class="modal-body">
                        <form class="form-horizontal" name="myForm" novalidate>
                            <fieldset>
                                <!-- Form Name -->
                                <legend>Add New Inventory</legend>
                                <!-- Text input-->
                                <div class="form-group">
                                    <label class="col-md-3 control-label" for="name">ID liên hệ: </label>
                                    <div class="col-md-8">
                                        <select ng-model="id_lien_he" class="form-control input-md">
                                            <option ng-repeat="abc in listlienhe" value="{{abc.ID_LIEN_HE}}">{{abc.ID_LIEN_HE}}</option>
                                        </select>
                                    </div>
                                </div>
                                <!-- Text input-->
                                <div class="form-group">
                                    <label class="col-md-3 control-label" for="name">Pur phụ trách: </label>
                                    <div class="col-md-8">
                                        <select ng-model="pur_phu_trach" class="form-control input-md">
                                            <option ng-repeat="abc in listnhanvienpurphutrach" value="{{abc.USERNAME}}">{{abc.HO_VA_TEN}}</option>
                                        </select>
                                    </div>
                                </div>
                                <!-- Textarea -->
                                <div class="form-group">
                                    <label class="col-md-3 control-label" for="name">Ngày bắt đầu phụ trách: </label>
                                    <div class="col-md-8">
                                        <input id="tenkho" name="tenkho" mask="39/19/9999" type="text" placeholder="" class="form-control input-md" ng-model="ngay_bat_dau_phu_trach">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-3 control-label" for="name">Ngày kết thúc phụ trách: </label>
                                    <div class="col-md-8">
                                        <input id="tenkho" name="tenkho" mask="39/19/9999" type="text" placeholder="" class="form-control input-md" ng-model="ngay_ket_thuc_phu_trach">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 control-label" for="name">Trạng thái: </label>
                                    <div class="col-md-4">
                                        <input id="tenkho" name="tenkho" type="checkbox" placeholder="Tên dịch vụ" ng-model="trang_thai">
                                    </div>
                                </div>
                                <!-- Button (Double) -->
                                <div class="form-group">
                                    <label class="col-md-3 control-label" for="anmelden"></label>
                                    <div class="col-md-2">
                                        <button id="addnew" name="addnew" class="btn btn-success" ng-click="add()" data-dismiss="modal">Add New</button>
                                        <button id="exit" name="exit" class="btn btn-danger" data-dismiss="modal">Exit</button>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!--end modal-->
        <!-- Modal Update -->
        <div class="modal fade" id="myEdit" role="dialog">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">

                    <div class="modal-body">
                        <form class="form-horizontal" name="myForm" novalidate>
                            <fieldset>
                                <!-- Form Name -->
                                <legend>Update Inventory</legend>
                                <!-- Text input-->
                                <div class="form-group">
                                    <label class="col-md-3 control-label" for="name">ID liên hệ: </label>
                                    <div class="col-md-8">
                                        <select ng-model="item.ID_LIEN_HE" class="form-control input-md">
                                            <option ng-repeat="abc in listlienhe" value="{{abc.ID_LIEN_HE}}">{{abc.ID_LIEN_HE}}</option>
                                        </select>
                                    </div>
                                </div>
                                <!-- Text input-->
                                <div class="form-group">
                                    <label class="col-md-3 control-label" for="name">Pur phụ trách: </label>
                                    <div class="col-md-8">
                                        <select ng-model="item.PUR_PHU_TRACH" class="form-control input-md">
                                            <option ng-repeat="abc in listnhanvienpurphutrach" value="{{abc.USERNAME}}">{{abc.HO_VA_TEN}}</option>
                                        </select>
                                    </div>
                                </div>
                                <!-- Textarea -->
                                <div class="form-group">
                                    <label class="col-md-3 control-label" for="name">Ngày bắt đầu phụ trách: </label>
                                    <div class="col-md-8">
                                        <input id="tenkho" name="tenkho" mask="39/19/9999" type="text" placeholder="Tên dịch vụ" class="form-control input-md" ng-model="item.NGAY_BAT_DAU_PHU_TRACH">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-3 control-label" for="name">Ngày kết thúc phụ trách: </label>
                                    <div class="col-md-8">
                                        <input id="tenkho" name="tenkho" mask="39/19/9999" type="text" placeholder="Tên dịch vụ" class="form-control input-md" ng-model="item.NGAY_KET_THUC_PHU_TRACH">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-3 control-label" for="name">Trạng thái: </label>
                                    <div class="col-md-2">
                                        <input id="tenkho" name="tenkho" type="checkbox" ng-model="item.TRANG_THAI">
                                    </div>
                                </div>
                                <!-- Button (Double) -->
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="anmelden"></label>
                                    <div class="col-md-8">
                                        <button id="addnew" name="addnew" class="btn btn-success" ng-click="save(item.ID)" data-dismiss="modal">Save</button>
                                        <button id="exit" name="exit" class="btn btn-danger" data-dismiss="modal">Exit</button>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <!--end modal-->
        <!-- Modal delete -->
        <div class="modal fade" id="delete_item" role="dialog">
            <div class="modal-dialog modal-sm">
                <div class="modal-content">

                    <div class="modal-body">
                        <form class="form-horizontal" name="myForm" novalidate>
                            <fieldset>
                                <!-- Form Name -->
                                <legend>Xóa mô hình</legend>
                                <center>Are you sure you want to delete <b>{{item.ID_LIEN_HE}}</b></center>
                                <p></p>

                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="delete"></label>
                                    <div class="col-md-8">
                                        <button id="delete" name="delete" class="btn btn-danger" ng-click="delete(item.ID)" data-dismiss="modal">Delete</button>
                                        <button id="exit" name="exit" class="btn btn-success" data-dismiss="modal">Exit</button>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <!--end modal-->
        <!-- Show Table -->
        <table id="example" class="table table-striped table-bordered" cellspacing="0">
            <thead>
                <tr>
                    <th>ID Liên hệ</th>
                    <th>PUR phụ trách</th>
                    <th>Ngày bắt đầu phụ trách</th>
                    <th>Ngày kết thúc phụ trách</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                <tr dir-paginate-start="item in filtered = (listpurphutrach | filter: {TEN_MO_HINH:searchtext}) | itemsPerPage:3 ">
                    <td>{{item.ID_LIEN_HE}}</td>
                    <td>{{item.PUR_PHU_TRACH}}</td>
                    <td>{{item.NGAY_BAT_DAU_PHU_TRACH | date: 'dd/MM/yyyy'}}</td>
                    <td>{{item.NGAY_KET_THUC_PHU_TRACH | date: 'dd/MM/yyyy'}}</td>
                    <td class="text-center">
                        <button class="btn btn-success btn-circle" ng-click="edit(item)" type="button" data-toggle="modal" data-target="#myEdit"><i class="glyphicon glyphicon-edit"></i></button>
                    </td>
                    <td class="text-center">
                        <button class="btn btn-warning btn-circle" ng-click="edit(item)" type="button" data-toggle="modal" data-target="#delete_item"><i class="glyphicon glyphicon-remove"></i></button>
                        <!--<button class="btn btn-warning btn-circle" ng-click="delete(item.MA_KHO)"><i class="glyphicon glyphicon-remove"></i></button>-->
                    </td>
                </tr>
                <tr ng-if="item.expanded" dir-paginate-end=""></tr>
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="9" style="border: none !important">
                        <dir-pagination-controls max-size="12" style="float:right;"
                                                 direction-links="true"
                                                 boundary-links="true">
                        </dir-pagination-controls>
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>
