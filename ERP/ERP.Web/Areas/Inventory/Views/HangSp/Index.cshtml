
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Inventory/Views/Shared/Layout.cshtml";
}

<meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
<link href="~/Content/self-writing/css/HangSpHL.css" rel="stylesheet" />

<div class="panel-heading">
    <marquee width="80%">Bạn đang xem danh mục hãng hàng hóa</marquee>
</div>
<br />
<div ng-app="myApp" ng-controller="NhomvthhCtrl">
    <div class="content">


        <div id="quick-access">
            <form class="form-inline quick-search-form" role="form" action="#">
                <div class="form-group" style="width: 100%">
                    <input type="text" style="width: 60%" class="form-control" placeholder="Type Maker Code You Want To Search Here" ng-model="search_text">
                </div>
            </form>
        </div>
        <button type="button" class="btn fa fa-plus" data-toggle="modal" data-target="#myModal" style="float: right; margin-bottom: 5px;">Add New Maker</button>

        <!-- Modal Add New -->
        <div class="modal fade" id="myModal" role="dialog">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">

                    <div class="modal-body">
                        <form class="form-horizontal" name="myForm" novalidate>
                            <fieldset>
                                <!-- Form Name -->
                                <legend>Add New Maker</legend>
                                <!-- Text input-->
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="name">Maker Code: </label>
                                    <div class="col-md-4">
                                        <input type="text" placeholder="Maker Code" class="form-control input-md" ng-model="manhomhangchitiet">
                                    </div>
                                </div>
                                <!-- Text input-->
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="name">Maker Name: </label>
                                    <div class="col-md-4">
                                        <input type="text" placeholder="Maker Name" class="form-control input-md" ng-model="chungloaihang">
                                    </div>
                                </div>
                                <!-- Text input-->
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="name">Maker's Parent Code : </label>
                                    <div class="col-md-4">
                                        <input type="text" placeholder="Maker's Parent Code " class="form-control input-md" ng-model="manhomhangcha">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="name">Note: </label>
                                    <div class="col-md-4">
                                        <input type="text" placeholder="Note" class="form-control input-md" ng-model="ghichu">
                                    </div>
                                </div>
                                <!-- Button (Double) -->
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="anmelden"></label>
                                    <div class="col-md-8 addnew">
                                        <button id="addnew" name="addnew" class="btn" ng-click="add()" data-dismiss="modal">Add New</button>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                        <button id="exit" name="exit" class="btn" data-dismiss="modal">Exit</button>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!--end modal-->
        <!-- Modal Update -->
        <div class="modal fade" id="myEdit" role="dialog">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">

                    <div class="modal-body">
                        <form class="form-horizontal" name="myForm" novalidate>
                            <fieldset>
                                <!-- Form Name -->
                                <legend>Cập nhật nhóm hàng</legend>
                                <!-- Text input-->
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="name">Maker Code: </label>
                                    <div class="col-md-4">
                                        <input type="text" placeholder="Maker Code" class="form-control input-md" ng-model="item.MA_NHOM_HANG_CHI_TIET" ng-disabled="true">
                                    </div>
                                </div>
                                <!-- Text input-->
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="name">Maker Name: </label>
                                    <div class="col-md-4">
                                        <input type="text" placeholder="Maker Name" class="form-control input-md" ng-model="item.CHUNG_LOAI_HANG">
                                    </div>
                                </div>
                                <!-- Text input-->
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="name">Maker's Parent Code : </label>
                                    <div class="col-md-4">
                                        <input type="text" placeholder="Maker's Parent Code " class="form-control input-md" ng-model="item.MA_NHOM_HANG_CHA">
                                    </div>
                                </div>
                                <!-- Text input-->
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="name">Note: </label>
                                    <div class="col-md-4">
                                        <input type="text" placeholder="Note" class="form-control input-md" ng-model="item.GHI_CHU">
                                    </div>
                                </div>
                                <!-- Button (Double) -->
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="anmelden"></label>
                                    <div class="col-md-11 edit">
                                        <button class="btn" ng-click="save(item.MA_NHOM_HANG_CHI_TIET)" data-dismiss="modal">Save</button>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                        <button class="btn" data-dismiss="modal">Exit</button>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <!--end modal-->
        <!-- Modal delete -->
        <div class="modal fade" id="delete_item" role="dialog">
            <div class="modal-dialog modal-sm">
                <div class="modal-content">

                    <div class="modal-body">
                        <form class="form-horizontal" name="myForm" novalidate>
                            <fieldset>
                                <!-- Form Name -->
                                <legend>Delete Maker</legend>
                                <center>Are you sure you want to delete <b>{{item.MA_NHOM_HANG_CHI_TIET}}</b></center>
                                <p></p>

                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="delete"></label>
                                    <div class="col-md-8">
                                        <button id="delete" name="delete" class="btn" ng-click="delete(item.MA_NHOM_HANG_CHI_TIET)" data-dismiss="modal">Delete</button>
                                        <button id="exit" name="exit" class="btn" data-dismiss="modal">Exit</button>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <!--end modal-->

        <table id="example" class="table table-bordered" cellspacing="0" name="tblhanghoa">
            <thead>
                <tr>
                    <th>Maker Code</th>
                    <th>Maker Name</th>
                    <th>Maker's Parent Code </th>
                    <th>Note</th>
                    <th colspan="2">Action</th>
                </tr>
            </thead>
            <tbody>
                <tr dir-paginate="item in filtered = (danhsachsp | filter: {MA_NHOM_HANG_CHI_TIET:search_text}) | itemsPerPage:15 | orderBy: 'item.SO_TK'" class="hover" ng-class-odd="'odd'" ng-class-even="'even'">
                    <td class="text-left" ng-class="whatclass(item.MA_NHOM_HANG_CHA)">{{ item.MA_NHOM_HANG_CHI_TIET }}</td>
                    <td class="text-left">{{item.CHUNG_LOAI_HANG}}</td>
                    <td class="text-left">{{item.MA_NHOM_HANG_CHA}}</td>
                    <td>{{item.GHI_CHU}}</td>
                    <td>
                        <button class="btn fa fa-edit" ng-click="edit(item)" type="button" data-toggle="modal" data-target="#myEdit"></button>
                    </td>
                    <td>
                        <button class="btn fa fa-trash" ng-click="edit(item)" type="button" data-toggle="modal" data-target="#delete_item"></button>
                        <!--<button class="btn btn-warning btn-circle" ng-click="delete(item.MA_KHO)"><i class="glyphicon glyphicon-remove"></i></button>-->
                    </td>

                </tr>
                <!--Detail row-->

            </tbody>
            <tfoot>
                <tr>
                    <td colspan="9" style="border: none !important">
                        <dir-pagination-controls max-size="12" style="float:right;"
                                                 direction-links="true"
                                                 boundary-links="true">
                        </dir-pagination-controls>
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>
<script src="~/Content/download/angularjs/angular-ui-router.js"></script>

