@model ERP.Web.Models.NewModels.nhanvien

@{
    ViewBag.Title = "Details";
}
<style>
    .thongtin{
    margin-bottom: 15px;
}
</style>


<div id="chitiet" class="container" style="margin-top: 20px;">
    <div class="row">
        <div class="col-md-4">
            <img src="~/Content/Images/Avatar/@Model.AVATAR" name="aboutme" style="width: 100%" height="300" border="0">
        </div>
        <div class="col-md-8">
            <h1 style="color: #097be0;font-weight: bold">@Model.HO_VA_TEN</h1>
            <div class="col-md-12" style="margin-bottom: 20px;">
                <p class="col-md-5" style="color: #097be0"><i class="fa fa-home" aria-hidden="true" style="margin-right: 5px;color: #097be0"></i>@Model.TEN_PHONG_BAN</p>
                <p class="col-md-5" style="color: #097be0"><i class="fa fa-hand-o-right" aria-hidden="true" style="margin-right: 5px;color: #097be0"></i>@Model.CHUC_VU</p>
            </div>
            <div class="col-md-12 thongtin">
                <p class="col-md-6"><b>Họ và tên:</b>@Model.HO_VA_TEN</p>
                <p class="col-md-6"><b>Quê quán:</b>@Model.QUE_QUAN</p>
            </div>
            <div class="col-md-12 thongtin">
                <p class="col-md-6"><b>Giới tính:</b>@Model.GIOI_TINH</p>
                <p class="col-md-6"><b>Học vấn:</b>@Model.TRINH_DO_HOC_VAN</p>
            </div>
            <div class="col-md-12 thongtin">
                <p class="col-md-6"><b>Ngày sinh:</b>@Model.NGAY_SINH.ToString()</p>
            </div>
            <div class="col-md-12 thongtin">
                <p class="col-md-6"><b>Số điện thoại:</b>@Model.SDT</p>
            </div>
            <div class="col-md-12 thongtin">
                <p class="col-md-6"><b>Email:</b>@Model.EMAIL</p>
            </div>
        </div>
        <div class="col-md-12">
            <h1 style="color: #097be0">Thành tích công tác</h1>
            <p class="col-md-12" style="word-break: break-word">@Html.Raw(Model.THANH_TICH_CONG_TAC)</p>
        </div>
    </div>
</div>
